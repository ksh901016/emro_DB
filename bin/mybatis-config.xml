<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<typeAliases>
		<typeAlias type="namoo.board.entity.Board" alias="Board" />
		<typeAlias type="namoo.board.entity.Posting" alias="Posting" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.mariadb.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://127.0.0.1:3306/emrodb" />
				<property name="username" value="emrouser" />
				<property name="password" value="emrouser" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="mapper/BoardMapper.xml" />
		<mapper resource="mapper/PostingMapper.xml" />
	</mappers>
</configuration>